title-color = #444
link-color = #666
link-hover-color = #777

#visualizations
  display flex
  flex-flow row wrap

.visualization
  flex 0 0 auto
  margin 50px 0 0 50px

  a
    color link-color
    text-decoration none

    &:hover
      color link-hover-color

  .preview
    background-color #999
    background-image url(../checker.png)
    box-shadow inset 0 0 20px #333, 0 0 20px #ccc
    position relative

    &.active
      background-color #CBA164
      background-image url(../checker-active.png)
      box-shadow inset 0 0 20px #333, 0 0 20px #ccc

    &.pending
      box-shadow 0 0 20px #ccc
      background-image none
      font-size 1.5rem

      a
        text-align center
        color #eee

    a
      align-items center
      cursor pointer
      display flex
      height 270px
      justify-content center
      width 480px

      img
        max-height 100%
        max-width 100%

    span.overlay
      background-color #cecece
      border-bottom-left-radius 10px
      font-size 2rem
      padding 10px
      pointer-events none
      position absolute
      right 0
      top 0

  .menu
    align-items center;
    display flex
    justify-content space-between

    .title
      color title-color
      font-weight bold

    .version
      position relative
      top -8px

    .controls
      display flex
      justify-content space-between
      width 240px
