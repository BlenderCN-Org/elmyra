#wizard
  display flex
  height 100vh
  flex-direction column

  main
    align-items center
    display flex
    flex 1
    flex-flow row wrap
    justify-content center

    .option
      display flex
      flex-direction column
      margin 20px
      max-height 480px
      text-align center
      width 240px

      .description
        flex 1

      button
        margin 20px

.insert-group
  display flex
  flex-flow row wrap
  width 240px

  input
  .insert
    padding 4px

  input
    flex 1
    flex-basis auto
    text-align center
    width 60px

    &:first-child
      border: 1px solid #ccc
      border-radius 2px 0 0 2px

    &:last-child
      border: 1px solid #ccc
      border-radius 0 2px 2px 0

  .insert
    background-color: #eee
    border: 1px solid #ccc
    border-width 1px 0
